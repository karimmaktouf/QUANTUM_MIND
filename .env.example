# Configuration Google Gemini API
GOOGLE_API_KEY=votre_clé_api_google_ici
GEMINI_API_KEY=votre_clé_api_google_ici  # Alias accepté

# Configuration SerpAPI (recherches web)
SERPAPI_API_KEY=votre_clé_serpapi_ici

# Configuration Hugging Face (modèles/datasets)
HUGGINGFACE_API_TOKEN=votre_token_huggingface_ici

# Modèle par défaut (IMPORTANT: utilisez gemini-2.5-flash pour éviter quota errors)
DEFAULT_MODEL=gemini-2.5-flash

# Configuration Flask
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Configuration du serveur
FLASK_HOST=127.0.0.1
FLASK_PORT=5000

# Configuration de la base de données
DATABASE_PATH=data/quantum_mind.db

# Paramètres par défaut
DEFAULT_TEMPERATURE=0.7
DEFAULT_TOP_K=40
DEFAULT_TOP_P=0.95

# MT-Bench auto-refresh (en secondes, 0 pour désactiver)
MT_BENCH_REFRESH_INTERVAL=14400
